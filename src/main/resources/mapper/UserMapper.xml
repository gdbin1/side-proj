<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.gbk.sideproj.mapper.UserMapper">

  	<insert id="insertUser" parameterType="com.gbk.sideproj.domain.User">
        INSERT INTO user (username, password, name, email)
        VALUES (#{username}, #{password}, #{name}, #{email})
    </insert>


    <select id="findByUsername" parameterType="string" resultType="com.gbk.sideproj.domain.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

</mapper>